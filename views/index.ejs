<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Encontre as melhores acomodações para sua viagem. Casas, chalés, apartamentos e muito mais para uma experiência inesquecível.">
    <meta name="keywords" content="hospedagem, aluguel de casas, reserva, férias, viagem, chalé, apartamento">
    <meta name="author" content="Seu Nome ou Nome da Empresa">
    <title>Hospedagem</title>
    <link rel="stylesheet" href="/home-style">
</head>
<body>
    <!-- Cabeçalho -->
    <header>
        <div class="logo">
            <h1>Hospedagem</h1>
        </div>
        <nav>
            <ul>
                <% if (user) { %> 
                    <li><a href="/logout">Logout</a></li>  <!-- Link para Logout -->
                <% } else { %>
                    <li><a href="./login">Login</a></li>  <!-- Link para Login -->
                <% } %>
            </ul>
        </nav>
    </header>

    <!-- Conteúdo Principal -->
    <main>
        <section class="accommodation-listing">
            <!-- Filtro de Pesquisa -->
            <div class="search-filter">
                <h2>Encontre sua hospedagem</h2>
                <div class="search-box">
                    <input type="text" placeholder="Onde você quer ficar?" aria-label="Destino ou cidade" id="where">
                    <input type="date" placeholder="Data de Check-in" aria-label="Data de check-in">
                    <input type="date" placeholder="Data de Check-out" aria-label="Data de check-out">
                    <button class="cta-button" id="btn_filter">Filtrar</button>
                </div>
            </div>

            <!-- Listagem de Acomodações -->
            <div class="accommodation-cards">
                <% if (acomodacoes && acomodacoes.length > 0) { %>  <!-- Verifica se há acomodacoes -->
                    <% acomodacoes.forEach(propriedade => { %>
                        <!-- Card de Acomodação -->
                        <div class="property-card">
                            <img src="https://via.placeholder.com/400x300" alt="<%= propriedade.nome %>"> <!-- Imagem fixa -->
                            <div class="property-info">
                                <h3><%= propriedade.nome %></h3>
                                <h4><%= propriedade.endereco %></h4>
                                <p>R$<%= propriedade.preco %>/noite</p>
                                <button class="cta-button" onclick="window.location.href='/details/id=<%=propriedade.id %>'">Ver Detalhes</button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %> 
                    <p>Não há acomodações disponíveis no momento.</p>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Rodapé -->
    <footer>
        <p>&copy; 2024 Hospedagem & Reservas. Todos os direitos reservados.</p>
    </footer>

    <!-- Scripts -->
    <script src="/home-js"></script>
</body>
</html>
